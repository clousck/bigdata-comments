---
// Puedes definir variables o funciones aquí si necesitas lógica adicional.
// Por ahora, este ejemplo no utiliza lógica server-side.
---
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Analisis comentarios</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: #f3f4f6; /* Un color claro para el fondo */
      }
      h1 {
        font-size: 2.5rem;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
      }
      .group-members {
        align-self: flex-start; /* Alineado a la izquierda */
        margin-left: 20px;
        margin-bottom: 20px;
        color: #555;
      }
      .comment-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        max-width: 400px;
      }
      textarea {
        width: 100%;
        height: 100px;
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
      }
      button {
        padding: 10px 20px;
        background-color: #4caf50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
      }
      button:hover {
        background-color: #45a049;
      }
    </style>
  </head>
  <body>
    <!-- Título centrado -->
    <h2>Proyecto grupal de Big Data</h2>
	<h2>Análisis de sentimientos en comentarios de películas (IMDB) usando RNN (LSTM)</h2>

    <!-- Lista de integrantes alineada a la izquierda -->
    <div class="group-members">
      <p>Integrantes:</p>
      <ul>
        <li>De la Cruz Brayan</li>
        <li>Echeverría Victor</li>
        <li>Sandoval Alan</li>
      </ul>
    </div>

    <!-- Cuadro de comentarios -->
    <div class="comment-box">
      <textarea id="comment" placeholder="Escribe tu comentario aquí..."></textarea>
      <button onclick="sendComment()">Enviar Comentario</button>
    </div>

    <script>
      // Función para enviar el comentario a la API
      async function sendComment() {
        const comment = document.getElementById('comment')?.setAttribute('placeholder', 'Escribe algo...');
        if (!comment) {
          alert('Por favor, escribe un comentario antes de enviarlo.');
          return;
        }

        try {
          const response = await fetch('https://tu-api.azure.com/comentarios', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'Ocp-Apim-Subscription-Key': 'TU-CLAVE-DE-API'
            },
            body: JSON.stringify({ comentario: comment })
          });

          const result = await response.json();
          alert(`Comentario enviado: ${result.message || 'Éxito'}`);
        } catch (error) {
          console.error('Error al enviar el comentario:', error);
          alert('Hubo un problema al enviar el comentario. Inténtalo de nuevo.');
        }
      }
    </script>
  </body>
</html>

